<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.gallery.GalleryFragment">

    <TextView
        android:id="@+id/text_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/f_h_heart"
                android:layout_width="match_parent"
                android:layout_height="100dp" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/f_h_level"
                android:layout_width="match_parent"
                android:layout_height="300dp" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/f_h_chart"
                android:layout_width="match_parent"
                android:layout_height="300dp" />

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/f_g_f_layout_course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:flexWrap="wrap">

                <ImageButton
                    android:id="@+id/f_g_f_btn_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:contentDescription="添加项目"
                    android:maxWidth="80dp"
                    android:maxHeight="80dp"
                    android:minWidth="80dp"
                    android:minHeight="80dp"
                    android:scaleType="center"
                    android:src="@mipmap/dumbbell_foreground" />

                <ImageButton
                    android:id="@+id/f_g_f_btn_shot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="添加照片"
                    android:maxWidth="80dp"
                    android:maxHeight="80dp"
                    android:minWidth="80dp"
                    android:minHeight="80dp"
                    android:scaleType="center"
                    android:src="@android:drawable/ic_menu_camera" />

            </com.google.android.flexbox.FlexboxLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>