<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.skydoves.expandablelayout.ExpandableLayout
        android:id="@+id/d_c_ext_member"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:expandable_isExpanded="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/d_c_flex_member"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:flexWrap="wrap">

        </com.google.android.flexbox.FlexboxLayout>
    </com.skydoves.expandablelayout.ExpandableLayout>

    <TextView
        android:id="@+id/d_c_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="训练时间："
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/d_c_ext_member" />

    <LinearLayout
        android:id="@+id/d_c_linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/d_c_tv_time">

        <NumberPicker
            android:id="@+id/hourpicker"
            android:layout_width="40dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="时" />

        <NumberPicker
            android:id="@+id/minuteicker"
            android:layout_width="40dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="分" />

        <NumberPicker
            android:id="@+id/secondicker"
            android:layout_width="40dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="秒" />
    </LinearLayout>

    <Button
        android:id="@+id/d_c_btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确定"
        app:layout_constraintEnd_toStartOf="@+id/d_c_btn_cancel"
        app:layout_constraintTop_toBottomOf="@+id/d_c_linearLayout" />

    <Button
        android:id="@+id/d_c_btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取消"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/d_c_linearLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>